{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": [".next/**", "dist/**"]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "lint": {
        "dependsOn": ["^lint"]
      },
      "type-check": {
        "dependsOn": ["^type-check"]
      },
      "clean": {
        "cache": false
      }
    }
  }
  