{
  "version": 2,
  "builds": [
    {
      "src": "apps/hub-app/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "apps/academy/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/apps/academy/$1",
      "has": [
        {
          "type": "host",
          "value": "academy.serviceclub-monorepo.vercel.app"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/apps/academy/$1",
      "has": [
        {
          "type": "host",
          "value": "academy.serviceclub.com"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/apps/hub-app/$1"
    }
  ]
} 