{
  "version": 2,
  "builds": [
    {
      "src": "apps/hub-app/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "apps/academy/package.json", 
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "^/academy/(.*)",
      "dest": "/apps/academy/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/hub-app/$1"
    }
  ],
  "functions": {
    "apps/hub-app/pages/api/*.js": {
      "maxDuration": 30
    },
    "apps/academy/pages/api/*.js": {
      "maxDuration": 30
    }
  }
} 